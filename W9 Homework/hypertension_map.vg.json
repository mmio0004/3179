  {
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 400,
    "title": "Prevalence of Hypertension in Men (30-79 years) - 2019",
    "projection": {"type": "equalEarth"},
    "layer": [
        {
            "data": {
                "url": "https://raw.githubusercontent.com/mmio0004/3179/main/ne_110m_admin_0_countries.json",
                "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
            },
            "transform": [
                {
                    "calculate": "'Data is not avaliable in ' +datum.properties.NAME",
                    "as": "note"
                }
            ],
            "mark": {
                "type": "geoshape", 
                "fill": "lightgray",
                "stroke": "#909090"
            },
            "encoding": {"tooltip": {"field": "note"}}
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/mmio0004/3179/main/ne_110m_admin_0_countries.json",
                "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
            },
            "transform": [
                {
                    "lookup": "properties.NAME",
                    "from": {
                        "data": {
                            "url": "https://raw.githubusercontent.com/mmio0004/3179/main/male-high-blood-pressure-2019-V2.csv"
                        },                    
                        "key": "Entity",
                        "fields": ["Prevalence of hypertension among adults aged 30-79 years, age-standardized - Sex: male"]
                    }
                }
            ],
            "mark": {"type": "geoshape"},
            "encoding": {
                "color": {
                    "field": "Prevalence of hypertension among adults aged 30-79 years, age-standardized - Sex: male",
                    "type": "quantitative",
                    "scale": {
                        "type": "threshold",
                        "domain": [20, 30, 40, 50, 60]
                    },
                    "title": "Hypertension Prevalence (%)"
                },
                "tooltip": [
                    {"field": "properties.NAME", "type": "nominal", "title": "Country"},
                    {
                        "field": "Prevalence of hypertension among adults aged 30-79 years, age-standardized - Sex: male",
