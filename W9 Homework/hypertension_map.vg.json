{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Prevalence of Hypertension in Men (30-79 years) - 2019",
    "width": 800,
    "height": 400,
    "projection": {"type": "equalEarth"},
    "data": {
      "url": "https://raw.githubusercontent.com/mmio0004/3179/main/ne_110m_admin_0_countries.json",
      "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
    },
    "transform": [
        {
            "filter": "datum.Year == 2019"
        },
      {
        "lookup": "properties.NAME",
        "from": {
          "data": {
            "url": "https://raw.githubusercontent.com/mmio0004/3179/main/male-high-blood-pressure.csv"
          },
          "key": "Entity",
          "fields": ["Prevalence of hypertension among adults aged 30-79 years, age-standardized - Sex: male"]
        }
      },
      {"calculate": "datum['Prevalence of hypertension among adults aged 30-79 years, age-standardized - Sex: male'] + 0.1", "as": "Hypertension Prevalence"}
    ],
    "mark": {"type": "geoshape"},
    "encoding": {
      "color": {
        "field": "Hypertension Prevalence",
        "type": "quantitative",
        "scale": {"type": "linear", "domain": [0, 100], "range": ["lightblue", "darkred"]}
      },
      "tooltip": [
        {"field": "properties.NAME", "type": "nominal", "title": "Country"},
        {"field": "Hypertension Prevalence", "type": "quantitative", "title": "Hypertension Prevalence (%)"}
      ]
    }
  }  